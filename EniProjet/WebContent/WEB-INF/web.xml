<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ENI-ENCHERE</display-name>
  <welcome-file-list>
    <welcome-file>ServletAccueil</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>ServerSQL Datasource</description>
    <res-ref-name>jdbc/pool_cnx</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  
  <filter>
       <filter-name>NoCacheFilter</filter-name>
       <filter-class>fr.eni.projetEni.servlet.FilterNoCache</filter-class>
    </filter>
   
    <!-- déclaration des URL interceptées par ce filtre -->
    <filter-mapping>
       <filter-name>NoCacheFilter</filter-name>
       <url-pattern>/Gestion-enchere/*</url-pattern>
    </filter-mapping>
</web-app>